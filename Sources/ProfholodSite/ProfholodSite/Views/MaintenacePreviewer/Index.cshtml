@model IEnumerable<ProfHolodSite.Models.MaintenacesObject>

@{
    ViewBag.Title = "Index";
}

<h2>Список предстоящих регламентных работ на ближайшие 7 дней</h2>


<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MachineObject.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaintenaceAction.Caption)
        </th>
        
        <th>
            Периодичность
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.MachineObject.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaintenaceAction.Caption)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Periodical.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>



        @if (ViewBag.AccessType == "Administrator" || (ViewBag.AccessType == "Chef") || ViewBag.AccessType == "Specialist")
        {
           
            <td>
                @Html.ActionLink("Создать отчет", "Report", new { id = item.Id })
            </td>
        }
        
   

    </tr>
}

</table>
