@model IEnumerable<ProfHolodSite.Models.Periodical>

@{
    ViewBag.Title = "Index";
}



@if (ViewBag.AccessType == "Administrator")
{
    <h2>Список периодов</h2>

    <p>
        @Html.ActionLink("Создать", "Create")
    </p>
}
else
{
    <h2>Список периодов (только просмотр)</h2>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time_period_sec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time_period_sec)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LCode)
        </td>
        @if (ViewBag.AccessType == "Administrator")
        {
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        }
    </tr>
}

</table>
